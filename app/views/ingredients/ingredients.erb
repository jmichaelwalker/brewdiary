<html>
  <head>
    <title>Ingredients</title>
    <style>
      label {
        width: 100px;
        float: left;
      }
      label[for=is_unused] {
        float: none;
      }
      .label-spacer {
        width: 100px;
        height: 1px;
        float: left;
      }
    </style>
  </head>
  <body>
    <form method="POST" action="/ingredients">
    <table border=.2>
      <tr>
        <th>ID #</th>
        <th>Name</th>
        <th>Type</th>
        <th>Color</th> 
        <th>SRM/IBUs</th>
        <th>Notes</th>
        <th></th>
      </tr>
      <tr>
        <% @ingredients.each do |ingredient| %>
        <td><%= ingredient.id %></td>
        <td><%= ingredient.ing_name %></td>
        <td><%= ingredient.ing_type %></td>
        <td><%= ingredient.color %></td>
        <td><%= ingredient.srm_ibu %></td>
        <td><%= ingredient.other %></td>
        <td>
          <button name="edit" value="<%= ingredient.id %>">Edit</button>
          <button name="delete" value="<%= ingredient.id %>">Delete</button>  
        </td>
      </tr>
    <% end %>
    </table>
      <button name="new" value="new">Add New</button>
  </form>
